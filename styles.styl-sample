@import "utils/reset"
@import "utils/mixins"

// Base ----------------------------------------------------------------------
html
  font-size: 62.5%
  height: 100%

body
  font-size: 16

body, legend, input, textarea, button
  font-family: 'Helvetica Neue'
  line-height: 1.4
  color: #333

a:link, a:visited { color: deeppink }
a:focus, a:link:hover  { color: hotpink }

p, ul, ol, dl, blockquote, table, figure { margin: .8em 0 }

// Headings ------------------------------------------------------------------
hgroup > :first-child { margin-bottom: .3em }
hgroup > :first-child + * { margin-top: .3em }

h1, h2, h3, h4 { line-height: 1.1 }

h1
  color: #333
  font-size: 32
  margin: .7em 0

h2
  color: #333
  font-size: 24
  margin: .8em 0

h3
  color: #333
  font-size: 19
  margin: 1em 0

h4
  color: #333
  font-size: 16
  margin: 1.3em 0

// Nav -----------------------------------------------------------------------
nav
  ul
    padding: 0
    font-size: 0
  li
    display: inline-block
    font-size: 16
  a
    display: block
